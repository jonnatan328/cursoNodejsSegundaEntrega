{{>header}}
    <div class="text-center">
        <h2>Formulario para ingresar un nuevo curso</h2>
        <p>Utilice este formulario para ingresar la información de un nuevo curso</p>
    </div>
    <form action="/guardarCurso" method="POST" class="form-horizontal">
        <fieldset>
            <legend>Información básica</legend>
            <div class="form-group row">
                <div class="col-sm-6">
                    <!-- ID FIELD -->
                    <label for="cursoId" class="control-label">Id:</label>
                    <input type="text" name="cursoId" id="cursoId" class="form-control" required placeholder="Ej. L1234">
                </div>

                <div class="col-sm-6">
                    <!-- NAME FIELD -->
                    <label for="name" class="control-label">Nombre:</label>
                    <input type="text" name="name" id="name" class="form-control" required  placeholder="Ej. Curso programación">
                </div>
            </div>

            <div class="form-group row" >
                <div class="col-sm-6">
                    <!-- MODALITY FIELD -->
                    <label for="modality" class="control-label">Modalidad:</label>
                    <select class="form-control" name="modality" id="modality">
                        <option>Virtual</option>
                        <option>Presencial</option>
                    </select>
                </div>

                <div class="col-sm-6">
                    <!-- COST FIELD - OPTIONAL -->
                    <label for="cost" class="control-label">Valor:</label>
                    <input type="number" name="cost" id="cost" class="form-control" required placeholder="Ej. 45000">                  
                </div>
            </div>

            <div class="form-group row" >
                <div class="col-sm-6">
                    <!-- DESCRIPTION FIELD -->
                    <label for="description" class="control-label">Descripción:</label>
                    <textarea type="text" rows="4" id="description" name="description" class="form-control" required placeholder="Descripción del curso"></textarea>    
                </div>

                <div class="col-sm-6">
                    <!-- HOURS AMOUNT FIELD - OPTIONAL -->
                    <label for="hoursAmount" class="control-label">Intensidad horaria:</label>
                    <input type="text" name="hoursAmount" id="hoursAmount" class="form-control" placeholder="Ej. 60">
                </div>

            </div>
            <!-- FORM BUTTON -->
            <div class="button-nav text-center">
                <button type="submit" class="btn btn-md btn-primary">Enviar</button>
            </div>
        </fieldset>
    </form>
{{>footer}}