{{>header}}
    <div class="text-center">
        <h2>Formulario para inscribirse en un curso</h2>
        <p>Utilice este formulario para inscribirse en un curso</p>
    </div>
    <form action="/guardarInscripcion" method="POST" class="form-horizontal">
        <fieldset>
            <legend>Información básica</legend>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <!-- ASPIRANTE ID FIELD -->
                        <label for="aspiranteId" class="control-label">Documento de identidad:</label>
                        <input type="text" name="aspiranteId" id="cursoId" class="form-control" required placeholder="Ej. 1234343">
                    </div>

                    <div class="col-sm-6">
                        <!-- CORREO FIELD -->
                        <label for="correoElectronico" class="control-label">Correo Electrónico:</label>
                        <input type="email" name="correoElectronico" id="correoElectronico" class="form-control" required  placeholder="Ej. pablo123@gmail.com">
                    </div>
                </div>

            <div class="form-group row" >
                <div class="col-sm-6">
                    <!-- NAME FIELD -->
                    <label for="name" class="control-label">Nombre:</label>
                    <input type="text" name="name" id="name" class="form-control" required  placeholder="Ej. Pablo Perez">
                </div>

                <div class="col-sm-6">
                    <!-- TELÉFONO FIELD - OPTIONAL -->
                    <label for="telefono" class="control-label">Teléfono:</label>
                    <input type="text" name="telefono" id="telefono" class="form-control" placeholder="Ej. 322445556">
                </div>
                
            </div>

            <div class="form-group row" >
                <div class="col-sm-6">
                    <!-- CURSOS FIELD -->
                    <label for="curso" class="control-label">Cursos disponibles:</label>
                    <select class="form-control" name="curso" id="curso">
                        {{{listarEnSelect}}}
                    </select>
                </div>
            </div>
            <!-- FORM BUTTON -->
            <div class="button-nav text-center">
                <button type="submit" class="btn btn-md btn-primary">Enviar</button>
            </div>
        </fieldset>
    </form>
{{>footer}}